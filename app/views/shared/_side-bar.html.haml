.side-bar
  .side-bar__user-name
    .top-items
      %h3.top-items__name
        =current_user.name
      =link_to edit_user_path(current_user), class: "top-items__icon" do
        = icon('fas', 'cog')
      =link_to new_group_path, class: "top-items__icon--padding" do
        = icon('far', 'edit')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group-box
        = link_to "#", class: "group-box--no-decoration" do  
          .group-box__name  
            = group.name
          .group-box__latest-message
            latest message
    

